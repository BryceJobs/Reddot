<%= simple_form_for(@link) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :url %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn-info" %>
    <%= link_to 'Back', links_path,  {class: "btn btn-danger"} %>
  </div>
<% end %>
